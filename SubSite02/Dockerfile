#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["SubSite02/SubSite02.csproj", "SubSite02/"]
COPY ["Monitoring/Monitoring.csproj", "Monitoring/"]
RUN dotnet restore "SubSite02/SubSite02.csproj"
COPY . .
WORKDIR "/src/SubSite02"
RUN dotnet build "SubSite02.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "SubSite02.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SubSite02.dll"]