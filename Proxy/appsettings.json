{
  "MainSite": "http://localhost:5000",
  "SubSite01": "http://localhost:5001",
  "SubSite02": "http://localhost:5002",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Yarp": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "minimumroute": {
        "ClusterId": "main",
        "Match": {
          "Hosts": [ "www.azurecontainerappswith.net" ]
        }
      },
      "subsite1": {
        "ClusterId": "subsite1",
        "Match": {
          "Hosts": [ "subsite1.azurecontainerappswith.net" ]
        }
      },
      "subsite2": {
        "ClusterId": "subsite2",
        "Match": {
          "Hosts": [ "subsite2.azurecontainerappswith.net" ]
        }
      }
    },
    "Clusters": {
      "main": {
        "Destinations": {
          "home": {
            "Address": "{{MainSite}}"
          }
        }
      },
      "subsite1": {
        "Destinations": {
          "home": {
            "Address": "{{SubSite01}}"
          }
        }
      },
      "subsite2": {
        "Destinations": {
          "home": {
            "Address": "{{SubSite02}}"
          }
        }
      }
    }
  }
}
